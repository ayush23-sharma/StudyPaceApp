<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Padding inside the background -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
